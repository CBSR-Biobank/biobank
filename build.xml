        <exclude name="${server-exclude-classes-list}" />
      </fileset>
      <fileset dir="${cacore.sdk.dir}\${system.dir}\${system.web.dir}">
        <include name="**/*" />
      </fileset>
      <fileset dir="${cacore.sdk.dir}\${build.dir}">
        <include name="docs/**/*" />
      </fileset>
      <classes dir="${cacore.sdk.dir}\${output.src.dir}">
